<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good_choice"
                android:textColor="@color/register_good"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text_size_23"
                />

            <com.hxqydyl.app.ys.ui.scrollviewandgridview.MyGridView
                android:id="@+id/gridview"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="75dp"
                android:gravity="center"
                android:horizontalSpacing="16dip"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="14dp"></com.hxqydyl.app.ys.ui.scrollviewandgridview.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg_selecter"
                    android:text="@string/next"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_13" />

                <Button
                    android:id="@+id/later_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/btn_bg_selecter"
                    android:text="@string/later"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_13" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
