<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/evip_other"
                android:textColor="@color/register_improve"
                android:textSize="@dimen/text_size_23" />

            <Button
                android:id="@+id/btn_city"
                style="@style/btn_address"
                android:layout_marginTop="@dimen/space_20"
                android:text="@string/evip_city" />

            <Button
                android:id="@+id/btn_hosital"
                style="@style/btn_address"
                android:layout_marginTop="@dimen/space_5"
                android:text="@string/evip_hospital" />

            <EditText
                android:id="@+id/edit_other"
                style="@style/edit_blue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/space_5"
                android:hint="@string/evip_other_hospital"
                android:singleLine="true"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_10"
                />

            <Button
                android:id="@+id/btn_office"
                style="@style/btn_address"
                android:layout_marginTop="@dimen/space_5"
                android:text="@string/evip_office" />

            <EditText
                android:id="@+id/edit_mobile"
                style="@style/edit_blue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/space_5"
                android:hint="@string/evip_phone"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_10"
                />

            <Button
                android:id="@+id/btn_ranks"
                style="@style/btn_address"
                android:layout_marginTop="@dimen/space_5"
                android:text="@string/evip_ranks" />

            <EditText
                android:id="@+id/brief_edit"
                style="@style/edit_blue"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/space_12"
                android:gravity="top"
                android:hint="@string/evip_brief"
                android:padding="@dimen/space_10" />

            <Button
                android:id="@+id/next_btn"
                style="@style/btn_blue"
                android:layout_marginTop="40dp"
                android:text="@string/next" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
