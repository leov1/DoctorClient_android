<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/split_color"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_apply"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/follow_text_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_toRightOf="@id/imge1"
                    android:text="@string/follow_apply" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_23"
                    android:src="@mipmap/xmxq_button_right_high" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_mgr"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/follow_text_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_toRightOf="@id/imge2"
                    android:text="@string/follow_manager" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_23"
                    android:src="@mipmap/xmxq_button_right_high" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_patient"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imge3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/follow_text_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_toRightOf="@id/imge3"
                    android:text="@string/follow_user" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_23"
                    android:src="@mipmap/xmxq_button_right_high" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_notice"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imge4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/follow_text_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_toRightOf="@id/imge4"
                    android:text="@string/follow_notice" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_23"
                    android:src="@mipmap/xmxq_button_right_high" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_articl"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imge5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    style="@style/follow_text_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_toRightOf="@id/imge5"
                    android:text="@string/follow_article" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_23"
                    android:src="@mipmap/xmxq_button_right_high" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>