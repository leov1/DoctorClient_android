<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="1">

        <View style="@style/divider_line" />

        <TableRow>

            <TextView
                style="@style/follow_up_form_left"
                android:text="@string/check_name" />

            <TextView
                android:id="@+id/tvCheckName"
                style="@style/follow_up_form_right" />
        </TableRow>

        <View style="@style/divider_line" />

        <TableRow>

            <TextView
                style="@style/follow_up_form_left"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingTop="@dimen/space_10"
                android:text="@string/check_result" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCheckResultText"
                    style="@style/follow_up_form_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/lineBelowRetText"
                    style="@style/divider_line" />

                <com.hxqydyl.app.ys.ui.fullshowview.FullShowGridView
                    android:id="@+id/checkResultPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:paddingBottom="@dimen/space_10"
                    android:paddingLeft="@dimen/space_25"
                    android:paddingRight="@dimen/space_25"
                    android:paddingTop="@dimen/space_10">

                </com.hxqydyl.app.ys.ui.fullshowview.FullShowGridView>
            </LinearLayout>

        </TableRow>

        <View style="@style/divider_line" />
    </TableLayout>
</LinearLayout>