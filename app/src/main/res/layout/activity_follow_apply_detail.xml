<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_patient"
                android:layout_width="match_parent" android:layout_height="80dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/head_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/head_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_alignTop="@+id/head_img"
                    >

                    <RelativeLayout
                        android:id="@+id/info_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="王志文"
                            android:id="@+id/head_name"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text_size_20"
                            />

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:layout_toRightOf="@+id/head_name"
                            android:layout_marginLeft="@dimen/space_15"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/tvAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26"
                            android:layout_toRightOf="@+id/tv_sex"
                            android:layout_marginLeft="@dimen/space_15"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/info_rl"
                        android:textSize="@dimen/text_size_16"
                        android:text="问题：幻想初期，症状表现为..."
                        />
                </RelativeLayout>
            </RelativeLayout>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e4e4e4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="症状表现和既往治疗经过"
                    android:textSize="@dimen/text_size_20"
                    android:layout_height="60dp" />

                <View android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_height="1dp"
                    android:background="#e4e4e4"/>

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="具体的内容"
                    android:textSize="@dimen/text_size_16"
                    android:layout_height="wrap_content" />

                <View android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_height="1dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <ImageView
                        android:src="@drawable/default_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <ImageView
                        android:src="@drawable/default_image"
                        android:layout_marginLeft="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <ImageView
                        android:src="@drawable/default_image"
                        android:layout_marginLeft="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                    <ImageView
                        android:src="@drawable/default_image"
                        android:layout_marginLeft="10dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />

                </LinearLayout>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4"/>
            
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="接受并关联随访方案"
            android:textColor="@color/white"
            android:background="@color/color_btn_bg"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/space_10"
            android:text="拒绝"
            android:textColor="@color/white"
            android:background="@color/color_btn_bg"
            android:layout_gravity="bottom" />
    </LinearLayout>

</LinearLayout>
