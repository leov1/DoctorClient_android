<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/evip_remark"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_18" />

                <com.hxqydyl.app.ys.ui.scrollviewandgridview.MyGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:layout_marginTop="@dimen/text_size_20"
                    android:verticalSpacing="@dimen/space_15"
                    android:listSelector="@android:color/transparent"
                    ></com.hxqydyl.app.ys.ui.scrollviewandgridview.MyGridView>

            </LinearLayout>
        </ScrollView>

        <Button
            style="@style/btn_blue"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:text="@string/register" />


        <RelativeLayout
            android:id="@+id/edit_photo_fullscreen_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:clickable="true"
            android:onClick="hideEditPhotoLayout"
            android:visibility="gone"
            android:focusable="true">

            <RelativeLayout
                android:id="@+id/edit_photo_outer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/edit_photo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/take_picture_layout_round_corner_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/take_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/take_picture"
                        android:textColor="@color/blue_text"
                        android:textSize="20sp" />

                    <View style="@style/horizontal_divider" >
                    </View>

                    <TextView
                        android:id="@+id/select_local_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/select_local_picture"
                        android:textColor="@color/blue_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_photo_layout"
                    android:layout_margin="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/video_order_layout_round_corner_bg"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/cancel"
                        android:textColor="@color/blue_text"
                        android:clickable="true"
                        android:onClick="hideEditPhotoLayout"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
