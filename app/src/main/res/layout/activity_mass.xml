<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_25"
            android:paddingLeft="@dimen/space_25"
            android:paddingRight="@dimen/space_25"
            android:paddingTop="@dimen/space_25">

            <EditText
                style="@style/edit_blue"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top"
                android:hint="群发内容"
                android:padding="@dimen/space_8" />

            <Button
                style="@style/btn_address"
                android:layout_marginTop="@dimen/space_25"
                android:text="选择患者" />

            <Button
                style="@style/btn_blue"
                android:layout_marginTop="150dp"
                android:text="群发" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
