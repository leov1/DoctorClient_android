<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical"
    tools:context="com.hxqydyl.app.ys.activity.patient_group.PatientGroupManageActivity">

    <include layout="@layout/top_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_15"
        android:background="@color/color_ececec" />

    <RelativeLayout
        android:id="@+id/rlAddPatientGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAddIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_30"
            android:src="@mipmap/ic_add_patient_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@id/ivAddIcon"
            android:text="@string/add_patient_group"
            android:textColor="@color/black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_efefef" />

    <ui.swipemenulistview.SwipeMenuListView
        android:id="@+id/lvPatientGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/space_15"
        android:divider="@color/color_dfdfdf"
        android:dividerHeight="1dp">

    </ui.swipemenulistview.SwipeMenuListView>

</LinearLayout>
