<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_20"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_alignTop="@+id/head_img"
        >

        <LinearLayout
            android:id="@+id/info_rl"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="王志文"
                android:id="@+id/head_name"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_18"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/img_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/head_name" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄：26岁"
                android:layout_toRightOf="@+id/img_sex"

                android:layout_marginLeft="@dimen/space_15"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-04-12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_15" />
        </LinearLayout>

       <TextView
           android:id="@+id/tvQ"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="3dp"
           android:layout_below="@+id/info_rl"
           android:textSize="@dimen/text_size_16"
           android:text="问题：幻想初期，症状表现为..."
           />
    </RelativeLayout>
</RelativeLayout>