<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator.Custom</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- translucent system bars
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
         -->
    </style>

    <style name="Widget.TabPageIndicator.Custom" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator.Custom</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.TabPageIndicator.Custom" parent="Widget">
        <item name="android:textColor">@color/vpi__background_holo_dark</item>
    </style>

    <style name="footer_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_footer_bar_radio" parent="footer_bar">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
    </style>

    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/item_selected_gray</item>
    </style>

    <style name="title_base_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="title_button" parent="title_base_button">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="CommonListViewStyle">
        <item name="android:divider">@drawable/list_view_divider</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:scrollingCache">true</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="edit_blue">
        <item name="android:textColor">#ff111111</item>
        <item name="android:textColorHint">#ffaaaaaa</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="btn_address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/register_content</item>
        <item name="android:background">@drawable/btn_address_selecter</item>
    </style>

    <style name="btn_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_bg_selecter</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="follow_text_20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="patient_info_left">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:paddingTop">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingRight">@dimen/space_11</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">@dimen/space_10</item>
        <item name="android:background">@color/color_dcf1f5</item>
    </style>

    <style name="patient_info_right">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:paddingTop">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:paddingLeft">@dimen/space_17</item>
        <item name="android:paddingRight">@dimen/space_11</item>
        <item name="android:textColor">@color/color_545454</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_dfdfdf</item>
    </style>

    <style name="gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_1</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- 时间选择器popwidnow 显示消失动画 -->
    <style name="timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom</item>
        <!-- 指定消失的动画xml -->
    </style>

    <color name="color_545454">#545454</color>
    <color name="color_dcf1f5">#dcf1f5</color>

    <!--药品-->
    <style name="medicine_left_title">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">#dcf1f5</item>
        <item name="android:layout_width">90dp</item>
    </style>
    <!--方案中的周期，左边title-->
    <style name="plan_cycle_left_title">
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--方案中的周期，右边-->
    <style name="plan_cycle_right_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">#747474</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 病历左 -->
    <style name="case_report_left">
        <item name="android:paddingLeft">@dimen/space_15</item>
        <item name="android:paddingTop">@dimen/space_10</item>
        <item name="android:paddingBottom">@dimen/space_10</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_040407</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowColor">@color/color_61666c</item>
        <item name="android:background">@drawable/shape_case_report_left_bg</item>
        <item name="android:paddingRight">@dimen/space_15</item>
    </style>

    <!-- 病历右 -->
    <style name="case_report_right" parent="case_report_left">
        <item name="android:paddingLeft">@dimen/space_30</item>
        <item name="android:textColor">@color/color_686868</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowColor">@color/color_61666c</item>
        <item name="android:background">@drawable/shape_case_report_right_bg</item>
    </style>

    <!-- 添加病历左 -->
    <style name="add_case_report_left">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/space_13</item>
        <item name="android:paddingTop">@dimen/space_13</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/space_27</item>
        <item name="android:paddingRight">@dimen/space_20</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:background">@color/color_ddf0f6</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 添加病历右 -->
    <style name="add_case_report_right" parent="add_case_report_left">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/color_4b4b4b</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <!-- 查看随访表单左 -->
    <style name="follow_up_form_left">
        <item name="android:background">@color/color_f7f7f7</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/space_40</item>
        <item name="android:paddingLeft">@dimen/space_25</item>
        <item name="android:paddingRight">@dimen/space_30</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <!-- 查看随访表单 -->
    <style name="follow_up_form_right">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/space_30</item>
        <item name="android:minHeight">@dimen/space_40</item>
        <item name="android:paddingRight">@dimen/space_25</item>
        <item name="android:textColor">@color/color_696969</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="measure_result">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/space_10</item>
        <item name="android:paddingRight">@dimen/space_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppBaseThemeLib" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="click_list_item">
        <item name="android:background">@color/color_f7f7f7</item>
        <item name="android:layout_marginBottom">2px</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">20dp</item>

    </style>

    <style name="click_list_item_name">
        <item name="android:drawableLeft">@drawable/need_input</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/color_646464</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="sex_switch">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textOff">"男"</item><!-- 此设置不需要文字，只显示背景图的开关 -->
        <item name="android:textOn">"女"</item>

    </style>
    <style name="dialog" parent="Theme.AppCompat">
    <item name="android:windowFrame">@null</item><!--边框-->
    <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
    <item name="android:windowIsTranslucent">false</item><!--半透明-->
    <item name="android:windowNoTitle">true</item><!--无标题-->
    <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
    </style>
</resources>